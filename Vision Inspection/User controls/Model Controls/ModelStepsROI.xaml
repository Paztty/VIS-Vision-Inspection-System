<UserControl x:Class="Vision_Inspection.User_controls.Model_Controls.ModelStepsROI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cam="clr-namespace:Vision_Inspection.Camera"
             xmlns:local="clr-namespace:Vision_Inspection.User_controls.Model_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#01000000"
             MouseMove="UserControl_MouseMove">
    <Grid>
        <Canvas x:Name="stepRectHolder" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </Canvas>
        <Line x:Name="VerticalLine" X1="0" X2="0" Y1="0" Y2="0" Stroke="Cyan" StrokeThickness="1" SnapsToDevicePixels="True"/>
        <Line x:Name="HorizontalLine" X1="0" X2="0" Y1="0" Y2="0" Stroke="Cyan" StrokeThickness="1" SnapsToDevicePixels="True"/>
    </Grid>
</UserControl>
